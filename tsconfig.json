{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": false,
		"outDir": "./dist/",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
    "baseUrl": ".",
		"lib": [
			"es6",
			"es7",
			"dom"
    ],
    "paths": {
      "@constants/*": ["./src/constants/*"],
      "@entities/*": ["./src/entities/*"],
      "@lib/*": ["./src/lib/*"]
    }
	}
}
