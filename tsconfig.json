{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": false,
		"outDir": "./dist/",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
    "baseUrl": ".",
		"lib": [
			"es6",
			"es7",
			"dom"
    ],
    "paths": {
      "@constants/*": ["./ts/constants/*"],
      "@entities/*": ["./ts/entities/*"],
      "@lib/*": ["./ts/lib/*"]
    }
	},
	"include": [
		"ts/**/*"
  ]
}
